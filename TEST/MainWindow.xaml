<Window x:Class="TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEST"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Width="500" Height="200" Name="dataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Имя" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Surname}" Header="Фамилия" Width="200"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="50" Margin="322,342,334,42" Content="Сохранить" Click="Button_Click" />
    </Grid>
</Window>
